<%- include header %>
<% posts.forEach(function (post, index) { %>
  <p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2>
  <a href="/u/<%= post.name %>"><img src="<%= post.head %>" class="r_head" /></a></p>
  <p class="info">
    Author: <a href="/u/<%= post.name %>"><%= post.name %></a> | 
    Date: <%= post.time.minute %> | 
    Tags:
    <% post.tags.forEach(function (tag, index) { %>
      <% if (tag.tag) { %>
        <a class="tag" href="/tags/<%= tag.tag %>"><span class="badge"><%= tag.tag %></span></a>
      <% } %>
    <% }) %>
  </p>
  <p><%- post.post %></p>
  <p class="info">View: <%= post.pv %> | Comment: <%= post.comments.length %></p>
<% }) %>
<%- include paging %>
<%- include footer %>