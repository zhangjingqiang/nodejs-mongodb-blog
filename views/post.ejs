<%- include header %>
<form class="form-horizontal" role="form" method="post">
  <div class="form-group">
    <label for="title" class="col-lg-2 control-label">Title</label>
    <div class="col-lg-6">
      <input type="text" class="form-control" name="title" id="title" placeholder="Enter title" required>
    </div>
    <h6><span class="label label-info">* required</span></h6>
  </div>
  <div class="form-group">
    <label for="post" class="col-lg-2 control-label">Post</label>
    <div class="col-lg-6">
      <textarea class="form-control" rows="10" cols="100" name="post" placeholder="Enter post" required></textarea>
    </div>
    <h6><span class="label label-info">* required</span></h6>
  </div>
  <div class="form-group">
    <label for="tags" class="col-lg-2 control-label">Tags</label>
    <div class="row">
	  <div class="col-lg-1">
	    <input type="text" class="form-control" name="tag1" />
	  </div>
	  <div class="col-lg-1">
	    <input type="text" class="form-control" name="tag2" />
	  </div>
	  <div class="col-lg-1">
	    <input type="text" class="form-control" name="tag3" />
	  </div>
	</div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-6">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>
<%- include footer %>